<% if current_user.employer? %>
<div class= "container d-flex card-job-application">
    <div class="user-info">
      <h1>About You</h1>
       <%= current_user.username %>
       <%= current_user.skills %>
    </div>
    <div class="card-job-application-right">
      <div class="title">
          <p>Employee job applications are here!</p>
      </div>
        <div class="job-applied">
            <h3>Jobs Applied</h3>
           <% unless @pending_applications.empty? %>
                  <% @pending_applications.each do |application| %>
                      <div class="card-product" id="border-width">
                        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
                              <div class="card-product-infos">
                                  <%= application.job.job_title %> - <%= application.status %>
                                  <%= link_to "Edit", edit_job_application_path(application) %>
                              </div>
                      </div>
                  <%end%>
          <% else %>
                  <div style="border: 1px solid #5FA8D3; margin:20px"class="card-product">
                  <div class="card-product-infos">
                  <p>No current pending applications</p>
                  </div>
                  </div>
          <% end %>
        </div>
      <div class="confirmed">
          <h3>Confirmed Applications</h3>
          <div class="cards-job-application">
              <% unless @confirmed_applications.empty? %>
                <% @confirmed_applications.each do |application| %>
                    <div class="card-product" id="border-width">
                      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
                          <div class="card-product-infos">
                            <h2><%= application.job.job_title %> - <%= application.status %></h3>
                            <p><%= link_to "View Details", job_application_path(application) %></p>
                          </div>
                      </div>
                <% end %>
            </div>
            <% else %>
            <div class="card-product-infos">
            <p>No current confirmed applications</p>
          </div>
          <% end %>
        </div>
     </div>
      </div>
      <% else %>
<div class= "container d-flex profile-job-application">
  <div class="user-info">
      <h1>About You</h1>
      <p> <%= current_user.username %> </p>
      <p> <%= current_user.skills %> </p>
    </div>
    <div class="title">
      <h1>Your job applications are here!</h1>
    </div>
  <div class="pending">
    <h3>Jobs Applied</h3>
    <ul>
    <% unless @pending_applications.empty? %>
      <% @pending_applications.each do |application| %>
        <li>
          <%= application.job.job_title %> - <%= application.status %>
        </li>
      <% end %>
      <% else %>
        <p>No current pending applications</p>
    <% end %>
    </ul>
  </div>
  <div class="confirmed">
    <h3>Confirmed Applications</h3>
    <ul>
    <% unless @confirmed_applications.empty? %>
      <% @confirmed_applications.each do |application| %>
        <li>
          <%= application.job.job_title %> - <%= application.status %>
          <%= link_to "View Details", job_application_path(application) %>
        </li>
      <% end %>
      <% else %>
    <p>No current confirmed applications</p>
    <% end %>
    </ul>
  </div>
  </div>
</div>
<% end %>
<%end%>
